                <!--android:layout_margin="25dp"-->
                <!--android:id="@+id/enter"-->
                <!--android:textSize="30sp"-->
                <!--android:text="Enter"/>-->

        </LinearLayout>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:padding="20dp"
        android:layout_margin="55dp"
        android:id="@+id/enter"
        android:textSize="30sp"
        android:text="Submit"/>

    </LinearLayout>
