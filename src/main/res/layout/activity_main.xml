<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context="com.elyehgmail.ladimer.smartbusiness.Main"
    android:background="@color/material_blue_grey_800">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:id="@+id/rateus"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:text="Rate Us"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rateus_border"
            android:textStyle="bold" />

        <Button
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:text="Clock In/Out"
            android:layout_weight="1"
            android:id="@+id/clockButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clock_out_border"
            android:textStyle="bold" />

        <Button
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:text="Administrator"
            android:layout_weight="1"
            android:id="@+id/admin"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/administrator_border"
            android:textStyle="bold" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:layout_margin="10dp"
       android:id="@+id/fragment_container"
       android:background="@drawable/border">

   </LinearLayout>


</LinearLayout>
